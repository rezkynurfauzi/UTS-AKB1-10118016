<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar" />

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/styleicon"
            android:backgroundTint="@color/Violet"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/potoprofile"

                android:fontFamily="@font/bold"
                android:text="Profile"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/potoprofile"
                android:fontFamily="@font/regular"
                android:text="Hallo, saya Rezky Nur Fauzi Saya masih belajar Android Studio"
                android:textAlignment="gravity"
                android:textColor="@color/black"

                android:textSize="16sp" />

            <ImageView
                android:id="@+id/potoprofile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/saya" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/interest"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/styleicon"
            android:backgroundTint="@color/Violet"
            android:padding="20dp">

            <TextView
                android:id="@+id/home_hobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Hobby"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/home_game"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_game" />

            <ImageView
                android:id="@+id/home_hobby_sepeda"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/home_game"
                android:src="@drawable/ic_sepeda" />

            <ImageView
                android:id="@id/home_hobby_renang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/home_hobby_sepeda"
                android:src="@drawable/ic_berenang" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/home_hobby"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/home_hobby_renang"
                android:src="@drawable/ic_baseline_local_movies_24" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/foodDrink"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/styleicon"
            android:backgroundTint="@color/Violet"
            android:padding="20dp">

            <TextView
                android:id="@+id/home_hobby_foodDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Food and Drink"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_hobby_seblak"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_foodDrink"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/regular"
                android:text="Seblak"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_hobby_mieayam"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_foodDrink"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/home_hobby_seblak"
                android:fontFamily="@font/regular"
                android:text="Mie Ayam"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_hobby_jusmangga"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_foodDrink"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/home_hobby_mieayam"
                android:fontFamily="@font/regular"
                android:text="Jus Mangga"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/interestCitacita"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/Violet"
            android:padding="16sp">

            <TextView
                android:id="@+id/home_hobby_citacita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Interest and Cita-cita"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_hobby_nongki"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_citacita"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/regular"
                android:text="Nongki"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/home_hobby_gaming"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_citacita"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/home_hobby_nongki"
                android:fontFamily="@font/regular"
                android:text="Gaming"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/home_hobby_citacitaku"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_below="@id/home_hobby_citacita"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/home_hobby_gaming"
                android:fontFamily="@font/regular"
                android:text="Android Developer"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textAlignment="center"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/Text">

        <include layout="@layout/main_nav_drawer" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>